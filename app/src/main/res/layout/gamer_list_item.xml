<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/gamer_size"
    android:orientation="horizontal">


    <ImageView

        android:id="@+id/gamer_item_photo_iv"
        android:layout_width="@dimen/gamer_size"
        android:layout_height="@dimen/gamer_size" />


    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.byoutline.secretsauce.views.CustomFontTextView
            android:id="@+id/gamer_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:textSize="20sp"
            android:text="@string/authorize_continue"
             />

        <com.byoutline.secretsauce.views.CustomFontTextView
            android:id="@+id/gamer_item_games_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|top"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/authorize_continue"
            />

    </LinearLayout>

</LinearLayout>